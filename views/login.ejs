<%- include("partials/header") %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Login manual -->
          <form action="/login" method="POST">
            <% if (errorStatus){ %>
              <% validClass="is-invalid"; %>
            <% } else { %>
              <% validClass=""; %>
              <% } %>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control email <%= validClass %>" name="username" oninput="$(".email").removeClass("is-invalid");">
            </div>
            <div class="form-group">
              <label for="password">Contrase√±a</label>
              <input type="password" class="form-control pass <%= validClass %>" name="password" oninput="$(".pass").removeClass("is-invalid");">
              <div class="invalid-feedback">
                <%= errorText %>
              </div>
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
            <a class="btn btn-light" href="/" role="button">Volver</a>
          </form>

        </div>
      </div>
    </div>

<!-- Login con redes sociales -->
    <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Login con Google
          </a>
        </div>
        <div class="card-body">
          <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
            Login con Facebook
          </a>
        </div>
        <div class="card-body">
          <a class="btn btn-block btn-social btn-twitter" href="/auth/twitter" role="button">
            <i class="fab fa-twitter"></i>
            Login con Twitter
          </a>
        </div>
      </div>
    </div>

  </div>
</div>
