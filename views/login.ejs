<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <% if (errorStatus){%>
              <%validClass="is-invalid";%>
            <%}else{%>
              <%validClass="";%>
              <%}%>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control email <%=validClass%>" name="username" oninput="$('.email').removeClass('is-invalid');">
            </div>
            <div class="form-group">
              <label for="password">Contraseña</label>
              <input type="password" class="form-control pass <%=validClass%>" name="password" oninput="$('.pass').removeClass('is-invalid');">
              <div class="invalid-feedback">
                El usuario o contraseña son incorrectos
              </div>
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
            <a class="btn btn-light" href="/" role="button">Volver</a>
          </form>

        </div>
      </div>
    </div>

